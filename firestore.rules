rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      // Anyone can read user profiles (needed for place ownership verification)
      allow read: if isSignedIn();
      // Only the user can create/update their own profile
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      // Only the user can delete their own profile
      allow delete: if isSignedIn() && isOwner(userId);
    }

    // Places collection
    match /places/{placeId} {
      // Anyone can read active places (for public profiles)
      allow read: if resource.data.isActive == true ||
                     (isSignedIn() && isOwner(resource.data.userId));

      // Only authenticated users can create places
      allow create: if isSignedIn() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.name is string &&
                       request.resource.data.name.size() > 0;

      // Only the owner can update their place
      allow update: if isSignedIn() &&
                       isOwner(resource.data.userId) &&
                       request.resource.data.userId == resource.data.userId;

      // Only the owner can delete their place
      allow delete: if isSignedIn() && isOwner(resource.data.userId);

      // Analytics subcollection
      match /analytics/{analyticsId} {
        // Anyone can create analytics events (for tracking public profile views/clicks)
        allow create: if true;

        // Only the place owner can read analytics
        allow read: if isSignedIn() && isOwner(get(/databases/$(database)/documents/places/$(placeId)).data.userId);

        // No one can update or delete analytics
        allow update, delete: if false;
      }

      // Email subscribers subcollection
      match /emailSubscribers/{subscriberId} {
        // Anyone can create email subscriptions
        allow create: if true;

        // Only the place owner can read email subscribers
        allow read: if isSignedIn() && isOwner(get(/databases/$(database)/documents/places/$(placeId)).data.userId);

        // No one can update or delete email subscribers
        allow update, delete: if false;
      }
    }
  }
}
